<?xml version="1.0" encoding="utf-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.okvir.me" version="1.0.0">
    <name>Praksa Centar</name>
    <description>Sample Apache Cordova App</description>
    <author email="okvir@gmail.com" href="https://okvir.skenda.me">
        oKvir
    </author>
    <edit-config xmlns:android="http://schemas.android.com/apk/res/android" file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
	    <application android:usesCleartextTraffic="true" android:windowSoftInputMode="adjustNothing|stateHidden" />
	</edit-config>
    <!-- Allow navigation to external URLs -->
    <allow-navigation href="http://*/*"/>
    <allow-navigation href="https://*/*"/>
    <!-- Allow access to specific domains -->
    <access origin="*"/>
    <access origin="http://cdn.skenda.me:5000"/>
    <access origin="https://cdn.skenda.me:5000"/>
    <!-- Allow intents for HTTP and HTTPS -->
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <platform name="android">
        <!-- Adaptive Icon Configuration -->
		<icon background="res/assets/icon-background.png" density="xxxhdpi" foreground="res/assets/icon-foreground.png"/>
		<!-- SDK config
		<preference name="android-minSdkVersion" value="29" />
		<preference name="android-targetSdkVersion" value="33" /> -->
	</platform>
	<preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="StatusBarBackgroundColor" value="#2B2830" />
	<preference name="NavigationBarBackgroundColor" value="#2B2830" />
	
	<preference name="AndroidInAppBrowserDarkMode" value="true" />
	<preference name="WebViewMixedContentMode" value="1" />
	


</widget>


